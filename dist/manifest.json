{
  "manifest_version": 3,
  "name": "推特内容抓取器",
  "version": "1.0.0",
  "description": "快速抓取并保存推特内容为结构化的 Markdown 文档",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_title": "打开推特抓取器"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}
